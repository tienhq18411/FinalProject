  <body>
    <div
      class="p-5"
      style="background:url('https://images.unsplash.com/photo-1600585153490-76fb20a32601?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzR8fGhvbWVzfGVufDB8fDB8fA%3D%3D&w=1000&q=80'); background-position: center;
  background-repeat: no-repeat;
  background-size: cover;height:100vh;"
    >

      <form class="container bg-light p-5 rounded-lg font-weight-bolder">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputTitle">Title</label>
            <input required type="email" class="form-control" id="inputTitle" />
          </div>
          <div class="form-group col-md-6">
            <label for="inputSize">Size</label>
            <input required type="email" class="form-control" id="inputSize" />
          </div>
          <div class="form-group col-md-6">
            <label for="inputPrice">Price</label>
            <input required type="email" class="form-control" id="inputPrice" />
          </div>
          <div class="form-group col-md-6">
            <label for="inputServicesPrice">Services Price</label>
            <input
              required
              type="text"
              class="form-control"
              id="inputServicesPrice"
            />
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Address</label>
          <input
            required
            type="text"
            class="form-control"
            id="inputAddress"
            placeholder="1234 Main St"
          />
        </div>
        <div class="form-group">
          <label for="inputFurniture">Furniture</label>
          <input
            required
            type="text"
            class="form-control"
            id="inputFurniture"
            placeholder="Apartment, studio, or floor"
          />
        </div>
        <div class="form-group">
          <label for="inputConvenience">Convenience</label>
          <input
            required
            type="text"
            class="form-control"
            id="inputConvenience"
            placeholder="Apartment, studio, or floor"
          />
        </div>
        <div class="form-group col-md-2">
          <input required type="file" name="img" multiple />
        </div>

        <button
          type="submit"
          class="btn btn-info float-right mb-4"
        >Create</button>
      </form>
    </div>

